@inherits LayoutComponentBase
@inject IHostEnvironment HostEnvironment

<div class="page">
    <div class="sidebar">
        <NavMenu />
    </div>

    <main>
        <div class="top-row px-4">
            <a href="https://learn.microsoft.com/aspnet/core/" target="_blank">About</a>
        </div>

        <article class="content px-4">
            @Body
        </article>
    </main>
</div>

<div id="blazor-error-ui">
    @if (HostEnvironment.IsProduction())
    {
        <span>Houve um problema e o aplicativo parou de funcionar. Por favor, recarregue a página para continuar e contate o suporte</span>
    }
    else
    {
        <span>An unhandled exception has occurred. See browser dev tools and output console for details.</span>
    }
    <a href="" class="reload">Recarregar</a>
    <a class="dismiss">🗙</a>
</div>